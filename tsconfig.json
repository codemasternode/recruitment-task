{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "checkJs": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "build",
        "data",
        "dist",
        "**/*.json",
        "**/tests/unit"
    ],
    "include": [
      "**/*.ts"
    ]
}
